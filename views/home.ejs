<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home page</title>

</head>

<body>
    <%- include("./partials/nav")%>
    <div class="container mt-4 ">
      <div class="row row-cols-3 ">

        <% blog.forEach(item => {%>
          <div class="col mt-4">
            <div class="card d-flex  style="width: 15rem;" >
              <img class="card-img-top img-fluid" src="data:image/jpeg;base64,<%= item.coverImg.
              toString('base64') %>" alt="Cover Image" width="25px" />
              <div class="card-body">
                <h5 class="card-title"><%=item.title%></h5>
         
                <a href="/blog/<%= item._id %>" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
  
          </div>
  
          <% }); %>
      </div>
      

    </div>

    <%- include("./partials/script") %>
</body>

</html>